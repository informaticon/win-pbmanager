{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "PyInstaller Build",
			"type": "shell",
			"command": "pyinstaller",
			"args": ["--log-level=WARN",
					"--distpath", "deploy/dist",
					"--workpath", "deploy/build",
					"--specpath", "deploy",
					"--noconfirm",
					"--name", "pbmanager",
					"--icon", "../assets/logo.ico",
					"pbmanager/pbmanager.py"
				],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},{
			"label": "InnoSetup Pack",
			"type": "process",
			"command": "iscc.exe",
			"args": ["deploy\\pbmanager.iss"
				],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},{
			"label": "Choco Pack",
			"type": "process",
			"command": "choco",
			"args": ["pack", ".\\deploy\\pmanager.nuspec"
				],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}